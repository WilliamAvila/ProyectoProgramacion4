    <div class="row" ng-hide="isEditing">
        <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="addNewLeague()">
            <h2 class="text-center">Add New League</h2>
            <div class="form-box">
                <div class="form-group">

                    <input ng-model="NewLeague.Name" type="text" class="form-control" placeholder="League Name" required autofocus />
                    <!--<input ng-model="LeagueType" type="text" class="form-control" placeholder="Id" required autofocus />

                <input ng-model="LeagueType" type="text" class="form-control" placeholder="Id" required autofocus />
                <input ng-model="ImgLeague" type="text" class="form-control" placeholder="Img URL" required autofocus />-->
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit" ng-disabled="!(NewLeague.Name)" disabled>Add</button>

                </div>
            </div>
        </form>
    </div>

    <div class="row" ng-show="isEditing">
        <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="editLeague()">
            <h2 class="text-center">Edit League</h2>
            <div class="form-box">
                <div class="form-group">

                    <input ng-model="LeaguetoEdit.Id" type="text" class="form-control" placeholder="League Id" required />
                    <input ng-model="LeaguetoEdit.Name" type="text" class="form-control" placeholder="League Name" required />
                    <!---<input ng-model="NuevoTipo" type="text" class="form-control" placeholder="League Type" required />


                <input ng-model="NuevaImagen" type="text" class="form-control" placeholder="League Image" required />-->
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                    <button class="btn btn-primary btn-block" type="button" ng-click="cancelEdit()">Cancel</button>
                </div>
            </div>
        </form>
    </div>

