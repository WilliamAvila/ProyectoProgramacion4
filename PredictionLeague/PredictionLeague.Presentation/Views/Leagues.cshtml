        </tr>
        <tr class ="row" ng-repeat="availableLeague in availableLeagues">

            <td>  {{availableLeague.Id}}  </td>
            <td><a class=" btn-link" href="/league/{{availableLeague.Id}}"> {{availableLeague.Name}} </a></td>
            <td> 0</td>
               
        <td>
            <a href="" ng-click="editMode(availableLeague)"><i class=" glyphicon glyphicon-pencil"></i></a>
        </td>
        <td><a href="" ng-click="deleteLeague(availableLeague.Id)"><i class="glyphicon glyphicon-remove"></i></a></td>
    </table>


</div>
                


                          


