<div ng-controller="MatchesCtrl">
    <br /><br />
    <br />
    <br />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Select</th>
                <th> Local Team</th>
                <th> Visiting Team</th>
                <th>Match Date</th>
                <th> My Guess</th>
                <th>Result</th>
                <th style="width: 50px;"></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="match in CurrentMatches" ng-if="match.id_liga===1">
                <td><a href="" ng-click="guessMatch(match.localTeam,match.visitor)"><i class=" glyphicon glyphicon-check"></i></a></td>
                <td ng-model="local">{{match.localTeam}}</td>
                <td ng-model="visitor">{{match.visitor}}</td>
                <td>{{match.date}}</td>
                <td>{{match.score}}</td>
            </tr>
        </tbody>
    </table>
    <div class="row" ng-show="isGuessing">
        <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="finishGuessing()">
            <h2 class="text-center">Edit Match</h2>
            <div class="form-box">
                <div class="form-group">
                    <input ng-model="LocalTeamScore" type="number" class="form-control" placeholder="Local Team Score" required />
                    <input ng-model="VisitingTeamScore" type="number" class="form-control" placeholder="Visiting Team Score" required />

                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                    <button class="btn btn-primary btn-block" type="button" ng-click="cancelEdit()">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>