<h1>Search for Leagues</h1>

<div ng-init="loadLeagues()">
    <table class="table table-hover">
        <tr class="row lead">
            <th>Id</th>
            <th>Name</th>
            <th>Points</th>

            <th>Subscribed</th>
        </tr>
        <tr class="row" ng-repeat="availableLeague in availableLeagues">

            <td>  {{availableLeague.Id}}  </td>
            <td><a class=" btn-link" href="/league/{{availableLeague.Id}}"> {{availableLeague.Name}} </a></td>
            <td> 0</td>
            <td>
                <button ng-click="SubscribeLeague(league.name)" class=" {{league.subscribed}}">Subscribe </button>
            </td></table>


</div>
