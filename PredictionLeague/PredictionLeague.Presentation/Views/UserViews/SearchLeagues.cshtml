<h1>My Leagues</h1>
<table class="table table-hover">
    <tr class="row lead">
        <th>..</th>
        <th>Name</th>
        <th>Type</th>
        <th>Accerts</th>
        <th>Points</th>
    </tr>
    <tr ng-repeat="league in misLigas" class="row">
        <td><img ng-src="{{league.leagueImg}}" style="height:30px;width:30px" /></td>
        <td> {{league.name}}  </td>
        <td>{{league.type}}</td>
        <td>{{league.accerts}}</td>
        <td>{{league.points}}</td>
    </tr>

</table>